namespace Admin\Model;
use Think\Model;

class CategoryInfoModel extends Model {
    
    /**
     * 获取类型详情-通过ID
     * @param type $id
     */
    public function getInfo($id){
        $_map['id'] = $id;
        return $this->where($_map)->find();
    }
    
    /**
     * 获取所有行业 - 以铸件为KEY
     * @return type
     */
    public function getAllWithKey(){
        
        $_map['data_status'] = 1;
        $list = $this->where($_map)->select();
        
        $_rs = array();
        foreach ($list as $val) {
            $_rs[$val['id']] = $val;
        }
        
        return $_rs;
    }
}