<div class="main-container" id="main-container">
    <div class="main-container-inner">
        <div class="main-content0">
            <div class="page-content">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <div class="row">
                            <div class="col-xs-12">

                                <div class="table-responsive">
                                    <div class="table-search">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right search-label" for="form-field-1">地区名称：</label>
                                            <div class="col-sm-2 seach-input-col">
                                                <input type="text" id="search-key" name="search-key" placeholder="支持模糊查询" value="{$search_key}" class="input-sm seach-input">
                                            </div>
                                            <span class="input-group-btn search-btn">
                                                <button type="button" class="btn btn-purple btn-sm" id="mart-search-button" surl='{:U("Baseinfo/mart")}'>
                                                    查询
                                                    <i class="icon-search icon-on-right bigger-110"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="table-search">
                                        <div class="form-group">
                                            <span class="input-group-btn search-btn">
                                                <button event-name="add-mart" type="button" class="btn btn-sm btn-success">
                                                    新增
                                                    <i class="icon-plus smaller-75"></i>
                                                </button>
                                                <div class="separate-2"><i class="separate-flag"></i></div>
                                                <button event-name="dels-mart" type="button" class="btn btn-sm btn-default">
                                                    删除
                                                    <i class="icon-remove"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <table id="sample-table-2" class="table table-striped table-bordered table-hover">                                        
                                        <tr>
                                            <td>
                                                <div class="tree_box col-sm-12">                                                    
                                                <volist name="area" id="list">
                                                    <div class="tree_box_1">
                                                        <div class="tree_box_1_title" style='height:35px; line-height: 35px;margin: 5px 0'>
                                                            <input type="checkbox" class="ace" name="area_id" value="{$list.id}"  /><span class="lbl"></span> <a style="cursor: pointer" class="spread icon-plus-sign" herf='javascript:void(0)'></a> {$list.city_name}
                                                        </div>                                                        
                                                        <div class="tree_box_2 hide" tree_box_child="{$list.id}">
                                                            <table class="table table-striped table-bordered table-hover">
                                                                <volist name="list.child" id="list2">
                                                                <tr>
                                                                    <td  class="align-right" style="width:5%">
                                                                        <input type="checkbox" class="ace" name="area_id" value="{$list2.id}" pvalue="{$list.id}" /><span class="lbl"></span>
                                                                    </td>
                                                                    <td style="width:95%"> <a style="cursor: pointer" class="spread2 icon-plus-sign" herf='javascript:void(0)'></a> {$list2.city_name}</td>
                                                                </tr> 
                                                                <tr  class="hide"  tree_box_child="{$list2.id}"> 
                                                                    <td  colspan="2">
                                                                        <table class="table table-striped table-bordered table-hover">
                                                                            <volist name="list2.child" id="list3">
                                                                                <tr>
                                                                                    <td  class="align-right" style="width:10%">
                                                                                        <input type="checkbox" class="ace" name="area_id" value="{$list3.id}" pvalue="{$list2.id}" /><span class="lbl"></span>
                                                                                    </td>
                                                                                    <td style="width:5%">{$list3.city_name}</td>
                                                                                    <td style="width:70%">
                                                                                    <if condition="count($list3['mart']) gt 0">
                                                                                        <foreach name="list3.mart" item="vo" empty='sdf'>{$vo.area_name};</foreach>
                                                                                    <else />
                                                                                    <p class="muted">暂无商圈</p>
                                                                                    </if>
                                                                                    </td>
                                                                                    <td class="hidden-480">
                                                                                        <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                                                                            <a class="green" event-name="edit-mart" event-id="{$list3.id}" href="javascript:void(0);" title="编辑">
                                                                                                <i class="icon-pencil bigger-130"></i>
                                                                                            </a>

                                                                                            <a class="red" event-name="del-mart"  event-id="{$list3.id}" href="javascript:void(0);" title="删除">
                                                                                                <i class="icon-trash bigger-130"></i>
                                                                                            </a>
                                                                                        </div>
                                                                                    </td>
                                                                                </tr> 
                                                                            </volist>
                                                                        </table>
                                                                    </td>
                                                                </tr> 
                                                                </volist>
                                                            </table>
                                                        </div>
                                                                                                                
                                                    </div>
                                                </volist>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content -->
        </div><!-- /.main-content -->

    </div><!-- /.main-container-inner -->

</div><!-- /.main-container -->
<!-- 添加面板 -->
<include file="dialog_addmart" />
<!-- 编辑面板 -->
<include file="dialog_editmart" />
<!-- 删除面板 -->
<include file="dialog_delmart" />
<!-- 批量删除面板 -->
<include file="dialog_delmarts" />

