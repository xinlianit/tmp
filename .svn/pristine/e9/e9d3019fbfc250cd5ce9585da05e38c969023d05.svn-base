<div dialog-id="edit-icon-box"  class="hide">
    <form class="form-horizontal" role="form" form-id="edit-icon-form" action="{:U('Baseinfo/editIcon')}" method="post">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">图标名称：</label>

            <div class="col-sm-9">
                <input type="text" name="icon_name" id="form-field-1"  class="col-xs-10 col-sm-5">
            </div>
        </div>
        <div class="space-4"></div>
        
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-5"> 图标分类： </label>
            <div class="col-sm-9">
                <select class="col-xs-10 col-sm-5"  name="icon_category">
                    <option value="1">服务电话</option>
                    <option value="2">客房服务</option>
                </select>
            </div>
        </div>
        <div class="space-4"></div>        
        
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">图标描述：</label>

            <div class="col-sm-9">
                <textarea class="col-xs-10" rows="3" name="icon_desc"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-4">已有图标：</label>
            <div class="col-sm-9">
                <img id="has_img" src="" style="height: 40px">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-4">上传图标：</label>
            
            <div class="col-sm-9">
                <input type="hidden" name="icon_md5">
                <include file="Layout:upload_image_single" uploader="uploader2" filepicker='filePicker2' />
            </div>
        </div>
        
        <div class="space-4"></div>
        <input type="hidden" name="icon_id" >
        
    </form>
</div>