<div dialog-id="add-sales-box" class="hide">

    <form class="form-horizontal" role="form" form-id="add-sales-form" action="{:U('Goods/addSales')}" method="post">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">促销名称：<span class="red">*</span></label>
            <div class="col-sm-9">
                <input type="text" name="promotion_name" placeholder="输入促销名称" class="col-xs-10 col-sm-5">
            </div>
        </div>
        <div class="space-4"></div>
        
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">页面排列号：<span class="red">*</span></label>
            <div class="col-sm-9">
                <select class="col-xs-10 col-sm-5"  name="data_sort">
                    <option value="0">请选择</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
        </div>
        <div class="space-4"></div>
        
        <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> 商品信息：<span class="red">*</span></label>
                <div class="col-sm-9">
                        <div class="category-box" tag-id="checked-goods"></div>
                        <button event-name="choose-goods-add" type="button" class="btn btn-sm btn-success add-category">
                                添加商品
                        </button>
                        <input type="hidden" name="goods_id"  tag-id="goods_id_add">
                </div>
        </div>
        <div class="space-4"></div>        
    </form>
</div>
